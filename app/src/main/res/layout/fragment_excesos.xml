        >

        <LinearLayout
            android:id="@+id/contenedor_switches"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical" />

    </ScrollView>

</FrameLayout>