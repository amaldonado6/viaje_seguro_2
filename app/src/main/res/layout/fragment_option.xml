<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.navigation.fragment.OptionFragment">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/idGridMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="1dp"
        app:columnCount="2"
        app:columnOrderPreserved="false"
        app:rowCount="3">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_reporte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="10dp"
            android:foreground="?selectableItemBackground"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"

            >

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/lay_reporte"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp"
                >

                <ImageView
                    android:id="@+id/reporte"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:contentDescription="@string/txt_rep_conductor"
                    android:padding="5dp"
                    android:src="@drawable/reporte" />

                <TextView
                    android:id="@+id/txt_reporte"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/txt_rep_conductor"
                    android:textColor="#ffcc00"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card_mapa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:foreground="?selectableItemBackground"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            >

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/lay_mapa"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="25dp"

                >

                <ImageView
                    android:id="@+id/img_mapa"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:contentDescription="@string/txt_mapa"
                    android:gravity="center"
                    android:padding="5dp"
                    android:src="@drawable/gps" />

                <TextView
                    android:id="@+id/txt_mapa"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/txt_mapa"
                    android:textColor="#ffcc00"
                    android:textSize="16sp"
                    android:textStyle="bold" />


            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_excesos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="10dp"
            android:foreground="?selectableItemBackground"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/lay_excesos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/img_check"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:contentDescription="@string/txt_excesos"
                    android:padding="5dp"
                    android:src="@drawable/check"/>

                <TextView
                    android:id="@+id/txt_excesos"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/txt_excesos"
                    android:textColor="#ffcc00"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_qr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:foreground="?selectableItemBackground"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/lay_qr"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="25dp">

                <ImageView
                    android:id="@+id/img_qr"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:contentDescription="@string/txt_qr"
                    android:padding="5dp"
                    android:src="@drawable/qr" />

                <TextView
                    android:id="@+id/txt_Mqr"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:text="@string/txt_qr"
                    android:textColor="#ffcc00"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/card_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="10dp"
            android:foreground="?selectableItemBackground"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/img_info"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:contentDescription="@string/txt_excesos"
                    android:padding="5dp"
                    android:src="@drawable/autobu" />

                <TextView
                    android:id="@+id/txt_info"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/txt_info"
                    android:textColor="#ffcc00"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card_panico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:foreground="?selectableItemBackground"
            app:cardCornerRadius="12dp"
            app:cardElevation="9dp"
            android:onClick="openDialog"
            tools:ignore="OnClick">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="25dp"

                >

                <ImageView
                    android:id="@+id/alerta"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:padding="5dp"
                    android:src="@drawable/alarma" />

                <TextView
                    android:id="@+id/txt_panico"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/txt_panico"
                    android:textColor="#ffcc00"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.cardview.widget.CardView>
    </androidx.gridlayout.widget.GridLayout>

</ScrollView>